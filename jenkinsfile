pipeline {
        agent {
                docker {
                        image 'node:6-alpine'
                        args '-p 3000:3000'
                }
        }
        stages {
                stage('Build') {
                        steps {
                                ssh 'npm install'
                        }
                }
                stage('Test') {
                        steps {
                                sh './jenkins/scripts/test.sh'
                        }
                }
        }
}
